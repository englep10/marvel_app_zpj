 <div class="preview" id="preview">
<% if @result %>
  <% if @result.present? %>
 <ul>
  <% if @results.present? %>
  	<% @results.each do |result| %>
    	<li><%= result['name'] %></li>
  	<% end %>
  <% else %>
  	<p>"There are no superheroes with that name"</p>
<% end %> 